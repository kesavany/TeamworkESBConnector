<?xml version="1.0" encoding="UTF-8"?>
<template name="init" xmlns="http://ws.apache.org/ns/synapse" >
    <parameter description="URL of the teamwork API" name="apiUrl"/>
	<parameter name="client_id" description="client_id of the user." />
    <sequence>
	<property name="teamwork.client_id" expression="$func:client_id" />
        <property name="uri.var.teamwork.apiUrl" expression="$func:apiUrl" scope="default" type="STRING"/>
	
	<header name="Authorization" expression="fn:concat('Basic ',base64Encode(get-property('teamwork.client_id')))"
                       scope="transport" />
    </sequence>
</template>
